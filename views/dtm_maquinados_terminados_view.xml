<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="dtm_maquinados_terminados_form_view" model="ir.ui.view">
            <field name="name">dtm_maquinados_terminados_form</field>
            <field name="model">dtm.maquinados.terminados</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="row ">
                            <h1 class="d-flex justify-content-between">
                                <div class="col-2">
                                    <field name="tipo_orden"/>
                                </div>
                                <div class="col-2">
                                    <field name="orden_trabajo"/>
                                </div>
                            </h1>
                        </div>
                        <group >
                            <field name="revision_ot"/>
                            <field name="disenador"/>
                            <field name="fecha_solicitud"/>
                            <field name="create_date" string="Fecha de termino"/>
                            <field name="duracion"/>

                        </group>
                        <field name="maquinados_id">
                            <tree>
                                <field name="nombre"/>
                                <field name="tipo_servicio"/>
                                <field name="cantidad"/>
                                <field name="tiempo_total" />

                            </tree>
                            <form>
                                    <group>
                                        <group>
                                            <field name="tipo_servicio"/>
                                            <field name="nombre"/>
                                            <field name="cantidad" />
                                            <field name="tiempo_total" />

                                        </group>
                                    </group>
                                    <notebook>
                                        <page string="Anexos">
                                           <field name="anexos_id">
                                                <tree>
                                                    <field name="name" invisible="0"></field>
                                                </tree>
                                                <form>
                                                    <group >
                                                        <field name="datas" filename="nombre" widget="pdf_viewer"></field>
                                                        <field name="name" invisible="1"></field>
                                                    </group>
                                                </form>
                                           </field>
                                        </page>
                                        <page string="Tiempos">
                                           <field name="tiempos_id">
                                                <tree>
                                                    <field name="create_date" string="Fecha"/>
                                                    <field name="tiempo"/>
                                                    <field name="contador"/>
                                                </tree>
                                           </field>
                                        </page>
                                    </notebook>

                            </form>
                        </field>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="dtm_maquinados_terminados_tree_view" model="ir.ui.view">
            <field name="name">dtm_maquinados_terminados_tree</field>
            <field name="model">dtm.maquinados.terminados</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="orden_trabajo"/>
                    <field name="tipo_orden"/>
                    <field name="revision_ot"/>
                    <field name="disenador"/>
                </tree>
            </field>
        </record>

        <record id="dtm_maquinados.terminados_search_view" model="ir.ui.view">
            <field name="name">dtm_maquinados_terminados_search</field>
            <field name="model">dtm.maquinados.terminados</field>
            <field name="arch" type="xml">
                <search string="ModelTitle">
                    <field name="orden_trabajo"/>
                </search>
            </field>
        </record>

        <record id="dtm_maquinados_terminados_act_window" model="ir.actions.act_window">
            <field name="name">Terminados</field>
            <field name="res_model">dtm.maquinados.terminados</field>
            <field name="view_mode">tree,form</field>
        </record>

<!--        <menuitem id="dtm_maquinados_terminados_menu" action="dtm_maquinados_terminados_act_window"/>-->

    </data>
</odoo>
