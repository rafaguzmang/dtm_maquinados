<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="dtm_maquinados_form_view" model="ir.ui.view">
            <field name="name">dtm_maquinados_form</field>
            <field name="model">dtm.maquinados</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                         <button type="object" name="action_finalizar" string="FINALIZAR ORDEN" icon="fa-print" title="print" class="btn btn-primary" attrs="{'invisible':[('finalizado','=',False)]}"/>
<!--                        "{'invisible':[('start','=',True)]}"-->
                    </header>
                    <sheet>
                        <div class="row ">
                            <h1 class="d-flex justify-content-between">
                                <div class="col-2">
                                    <field name="tipo_orden"/>
                                </div>
                                <div class="col-2">
                                    <field name="orden_trabajo"/>
                                </div>
                            </h1>
                        </div>
                        <group >
                            <field name="revision_ot"/>
                            <field name="disenador"/>
                            <field name="create_date" string="Fecha de Solicitud"/>
                            <field name="finalizado" invisible="1"/>
                        </group>
                        <field name="maquinados_id">
                            <tree create="0">
                                <field name="nombre"/>
                                <button type="object" name="action_inicio" icon="fa-play" title="plus" class="btn btn-success" attrs="{'invisible':['|',('terminado','=',True),('start','=',True)]}"/>
                                <button type="object" name="action_stop" icon="fa-stop" title="plus" class="btn btn-warning" attrs="{'invisible':['|',('terminado','=',True),('start','=',False)]}"/>
                                <field name="cantidad"/>
                                <field name="contador"/>
                                <button type="object" name="action_mas" icon="fa-chevron-up" title="plus" class="btn btn-primary" attrs="{'invisible':['|',('start','=',False),('terminado','=',True)]}" />
                                <field name="status" widget="progressbar"/>
                                <field name="tiempo_total" />
                                <field name="terminado" invisible="1"/>
                                <field name="start" invisible="1"/>
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="tipo_servicio"/>
                                        <field name="nombre"/>
                                        <field name="cantidad" />
                                    </group>
                                </group>
                                <notebook>
                                    <page string="Anexos">
                                       <field name="anexos_id">
                                            <tree>
                                                <field name="name" invisible="0"></field>
                                            </tree>
                                            <form>
                                                <group >
                                                    <field name="datas" filename="nombre" widget="pdf_viewer"></field>
                                                    <field name="name" invisible="1"></field>
                                                </group>
                                            </form>
                                       </field>
                                    </page>
                                    <page string="Tiempos">
                                       <field name="tiempos_id">
                                            <tree>
                                                <field name="create_date" string="Fecha"/>
                                                <field name="tiempo"/>
                                                <field name="contador"/>
                                            </tree>
                                       </field>
                                    </page>
                                </notebook>

                            </form>
                        </field>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="dtm_maquinados_tree_view" model="ir.ui.view">
            <field name="name">dtm_maquinados_tree</field>
            <field name="model">dtm.maquinados</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="orden_trabajo"/>
                    <field name="tipo_orden"/>
                    <field name="revision_ot"/>
                    <field name="disenador"/>
                    <field name="status" widget="progressbar"/>
                </tree>
            </field>
        </record>

        <record id="dtm_maquinados_search_view" model="ir.ui.view">
            <field name="name">dtm_maquinados_search</field>
            <field name="model">dtm.maquinados</field>
            <field name="arch" type="xml">
                  <search >
                    <field name="orden_trabajo"/>
                </search>
            </field>
        </record>

        <record id="dtm_maquinados_act_window" model="ir.actions.act_window">
            <field name="name">Maquinados</field>
            <field name="res_model">dtm.maquinados</field>
            <field name="view_mode">tree,form</field>
        </record>

<!--        <menuitem id="dtm_maquinados_menu" action="dtm_maquinados_act_window"/>-->

    </data>
</odoo>
